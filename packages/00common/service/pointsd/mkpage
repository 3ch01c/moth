#! /bin/sh

OPT=${CTF_BASE:-/opt}

# Use first installed binary
for bin in $OPT/*/bin/$1; do
    if [ -x $bin ]; then
        exec $bin
    fi
done

cat <<EOD
<!DOCTYPE html>
<html>
  <head>
    <title>$1</title>
  </head>
  <body>
    <h1>$1</h1>
    <p>No $1 binary installed!</p>
  </body>
</html>
EOD
