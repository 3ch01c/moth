#! /bin/sh

exec 2>&1

install -d /var/www

# Link in puzzles and web pages
for d in /opt/*; do
    if [ -d $d/puzzles ]; then
        ln -sf $d/puzzles /var/www/$(basename $d)
    fi
    if [ -d $d/www ]; then
        ln -sf $d/www/* /var/www/
    fi
done


mkdir -p sites
cd sites
ln -sf /var/www default
exec tcpsvd -u ctf 10.0.0.2 80 /opt/mcp/bin/fnord-cgi
